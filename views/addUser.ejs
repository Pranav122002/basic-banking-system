<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./components/headTag') -%>
</head>
<body>
    <%- include('./components/navbar') -%>

    
        <!-- - Back to all users -->

        <div class="container mt-2">
          <a href="/" style=" border-radius: 15px;" class="btn btn-secondary fw-bold ">&larr; Back</a>
      </div>

<div class="container mt-5">

     <!-- - Alert msg -->
     <% if(msg !="" ){%>
      <div class="alert alert-success text-center " role="alert" id="addMsg">

          <%=msg %>
      </div>


      <%} %>

  <div style=" border-radius: 15px;" class="container mt-5 bg-primary text-center text-light fw-30 p-2">
    <h3>Add User Form</h3>
  </div>
<form action="/adduser" method="POST" >
    <div class="form-group mt-3">
      <label for="exampleInputEmail1">Name</label>
      <input type="text"  style=" border-radius: 15px;" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userName" placeholder="Enter User Name" required>
     
    </div>
    <div class="form-group  mt-3">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email"  style=" border-radius: 15px;" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userEmail" placeholder="Enter User Email">
     
    </div>
    <div class="form-group  mt-3">
      <label for="exampleInputPassword1">Mobile</label>
      <input type="number" style=" border-radius: 15px;"  class="form-control" id="exampleInputPassword1" name="userNumber" placeholder="Enter User Contact ">

    </div>
    <div class="form-group  mt-3">
        <label for="exampleInputEmail1">Amount</label>
        <input type="Amount" style=" border-radius: 15px;"  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userAmount" placeholder="Enter Amount">

    <button type="submit" style=" border-radius: 15px;" class="btn btn-primary mt-3 text-center">Submit</button>
  </form>
</div>

    <%- include('./components/bootstrapScript') -%>
    <script>
        let alert = document.getElementById('addMsg');
    setTimeout(() => {
        alert.style.visibility = "hidden"
    }, 2000)
    </script>
</body>
</html>