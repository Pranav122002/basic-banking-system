<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./components/headTag') -%>
</head>
<body>
    <%- include('./components/navbar') -%>

        <!-- - Back to all users -->

        <div class="container mt-2">
          <a href="/" style=" border-radius: 15px;" class="btn btn-secondary fw-bold ">&larr; Back</a>
      </div>
      
<div class="container mt-5">
 <div style=" border-radius: 15px;" class="container mt-5 bg-primary text-center text-light fw-30 p-2">
   <h3>View All Customer</h3>
 </div>

    <table  class="table mt-2">
        <thead class="bg-primary text-light">
          <tr>
            <th style=" border-radius: 10px;" scope="col">Name</th>
            <th style=" border-radius: 10px;" scope="col">Email</th>
            <th style=" border-radius: 10px;" scope="col">Contact</th>
            <th style=" border-radius: 10px;" scope="col">Balence</th>
            <th style=" border-radius: 10px;" scope="col">Action</th>
            <th style=" border-radius: 10px;" scope="col">Remove</th>
            
          </tr>
        </thead>
        <tbody>
          <% if(data.length>0){%>
            <% data.forEach((e) => {%>
              <tr>
                <td><%= e.name %></td>
                <td><%= e.email %></td>
                <td><%= e.contact  %></td>
                <td><%= e.amount  %></td>
                <td>
                  <a href="/view/<%=e._id %>" style=" border-radius: 10px;" class="btn btn-primary">View & Transfer</a>
                </td>
                <td>
                  <a href="/delete/<%=e._id %>"" style=" border-radius: 10px;" class="btn btn-danger" >
                  <i class="fa fa-trash" ></i>
                </a>
                </td>
              </tr>
                            
              <%}) %>        
            
            <%}else{%>
              <tr class="bg-warning text-light">
                <td style=" border-radius: 10px;">
                  
                    No records Found!
                  
                </td>
              </tr>
            
              
              <%} %>
        
        
        </tbody>
      </table>
    </div>

    <%- include('./components/bootstrapScript') -%>
</body>
</html>